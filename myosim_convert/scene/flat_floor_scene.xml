        <!-- load texture and msh files -©vk©-->
    
        <compiler angle="radian" meshdir=".." texturedir=".."/>
        <asset>
            <!-- Scene -©vk©-->
            <texture builtin="gradient" height="1536" rgb1="1 1 1" rgb2="1 1 1" type="skybox" width="256"/>
            
            <texture name="texfloor" type="2d" builtin="checker" width="512" height="512" rgb1="0.561 0.725 0.937"  rgb2="0.384 0.494 0.639"  mark="edge" markrgb="1 1 1" gridlayout="8" />
            <material name="matfloor" reflectance="0" texture="texfloor" texrepeat="1 1" texuniform="true" />
            <hfield name="terrain" size="7 7 1 0.001" nrow="100" ncol="100"/>
        </asset>
    
        <statistic extent="5" center="0 -1 1"/>
    
        <visual>
            <scale light=".05" framewidth=".005"/>
            <headlight ambient=".4 .4 .4" diffuse="0.50 0.50 0.50" specular="0.50 0.50 0.50"/>
            <!-- <headlight ambient="0.3 0.3 0.3" diffuse="0.4 0.4 0.4" specular="0.5 0.5 0.5"/> -->
            <global elevation="-15"/>
            <rgba actuator='0 0 1 1' actuatorpositive='1 0 0 1' actuatornegative='0.0 0.0 1.0 1'/>
        </visual>
    
        <!-- Add files to the world -©vk©-->
        <worldbody>
            <!-- indoor lights -©vk©-->
            <light directional="false" diffuse=".5 .5 .5" specular="0.25 0.25 0.25" pos="0 -3 3" dir="0 1 -1" mode="trackcom"/>
            <camera name="isometric_view" pos="2 -2 1.25" xyaxes="1 1 0 -1 1 10" mode="trackcom"/>
            
            <!-- X-axis (Red) -->
            <geom name="x_axis" type="capsule" size="0.01 0.5" pos="0.5 0 0" euler="0 1.57 0" rgba="1 0 0 1" contype="0" conaffinity="0" group="2"/>
            <!-- Y-axis (Green) -->
            <geom name="y_axis" type="capsule" size="0.01 0.5" pos="0 0.5 0" euler="1.57 0 0" rgba="0 1 0 1" contype="0" conaffinity="0" group="2"/>
            <!-- Z-axis (Blue) -->
            <geom name="z_axis" type="capsule" size="0.01 0.5" pos="0 0 0.5" euler="0 0 0" rgba="0 0 1 1" contype="0" conaffinity="0" group="2"/>

            <!-- <camera name="side_view" pos="0 -3 1.0" xyaxes="1 0 0 0 0 1" mode="trackcom"/> -->
            <!-- <camera name="side_view" pos="-3 0 2.25" xyaxes="0 -1 0 1 0 2" mode="trackcom"/>
            <camera name="front_view" pos="0 -3 2.25" xyaxes="1 0 0 0 1 2" mode="trackcom"/> -->
            <!-- <geom name="terrain" type="hfield" hfield="terrain" pos="0 0 0" material="matfloor" conaffinity="1" contype="1" rgba="1 1 1 0"/> -->
            
            <geom name="floor" quat="1 0 0 0" rgba="0.5 0.5 0.5 1" material="matfloor" size="100 100 0.125" type="plane" /> 
            
            <!-- <geom name="floor" pos="0 0 0" size="7 7 .1" conaffinity="1" contype="1" type="plane" material="matfloor" condim="3"/> -->
            <!-- <geom type="mesh" pos="0 0 0" mesh="meshscene" material="matscene" conaffinity="0" contype="0"/> -->
            <!-- <geom type="box" pos="0 0 0" size="1.05 1.05 .005" conaffinity="0" contype="0" group="1" material="matwarning" /> -->
