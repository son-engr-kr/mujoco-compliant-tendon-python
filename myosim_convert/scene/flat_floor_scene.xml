            <!-- <geom type="box" size=".01 .01 0.85" pos="0 0 0.85"/> -->
            <!-- <geom type="mesh" mesh="human" rgba=".8 .8 .8 1" euler="0 0 3.14" pos="0 0 0"/> -->
        </worldbody>
    </mujoco>
    